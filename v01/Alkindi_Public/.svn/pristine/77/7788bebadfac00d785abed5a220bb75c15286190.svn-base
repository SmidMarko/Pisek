body {
    font-family: 'Roboto', sans-serif;
}

.container {
    display: block;
    position: relative;
    margin-left: 5px;
    margin-bottom: 50px;
}

.wrapper {
    display: block;
    position: relative;
    min-width: 300px;
    max-width: 770px;
}

.title {
    display: inline-block;
    position: relative;
    font-size: 24px;
}

.section {
    display: block;
    margin-top: 20px;
    width: 100%;
}

.section-button {
    display: inline-block;
    border: 1px solid black;
    font-size: 16px;
    padding: 0px;
    cursor: pointer;
    width: 16px;
    height: 16px;
    vertical-align: initial;
    text-align: center;
}

.minify .section-button {
}

.section-title {
    display: inline-block;
    position: relative;
    font-size: 20px;
}

.textarea-wrapper {
    display: block;
    position: relative;
}

.options-wrapper {
    display: inline-block;
    position: relative;
    vertical-align: top;
    margin-left: 30px;
    margin-top: 10px;
}

.minify .options-wrapper {
    display: none;
}

.options-title {

}

.textarea-input {
    margin-top: 10px;
    width: 100%;
    height: 100px;
    font-size: 16px;
/*    resize: none;*/
}

.minify .textarea-input,
.minify .textarea-output {
    border: 0 solid transparent;
    height: 60px;
}

.textarea-output {
    margin-top: 10px;
    width: 100%;
    height: 100px;
    font-size: 16px;
/*    resize: none;*/
}

.checkbox-option {
    display: block;
}

.chart-wrapper {
    display: inline-block;
    position: relative;
    vertical-align: top;
    margin-top: 8px;
}

.chart-text,
.chart-ref {
    width: 770px;
    height: 300px;
}

.chart-sum {
    width: 770px;
    height: 300px;
}

.minify .chart-text,
.minify .chart-ref {
    display: none;
}

.ref-min,
.frq-min {
    display: none;
}

.minify .ref-min,
.minify .frq-min {
    display: block;
    height: 20px;
}

.ref-min-item,
.frq-min-item {
    font-size: 16px;
    margin: 0 5px;
    width: 16px;
    text-align: center;
    float: left;
}


.show-sum .minify .chart-sum,
.minify .chart-sum,
.minify .sum-button,
.show-sum .minify .sum-button {
    display: none;
}

.minify .button-sum {
    display: none;
}

.show-sum .chart-sum {
    display: block;
}

.display-order-wrapper {
    display: inline-block;
    position: relative;
    vertical-align: top;
    margin-left: 30px;
    margin-top: 20px;
}

.minify .display-order-wrapper {
    display: none;
}

.display-order-title {
}

.display-order-item {
    display: block;
    position: relative;
}

.sub-wrapper {
    display: block;
    position: relative;
    width: 100%;
}

.minify .sub-wrapper {
    display: none;
}

.sub-content {
    display: inline-block;
    vertical-align: top;
}

.sub-input {
    display: inline-block;
    vertical-align: top;
}

.sub-input-text {

}

.sub-input-item {
    display: block;
}

.sub-item {
    display: inline-block;
    position: relative;
    border: 1px solid black;
    margin: 5px;
    min-width: 50px;
    text-align: center;
}

.sub-key {
    display: block;
    position: relative;
    padding: 5px;
    font-size: 30px;
    border: 1px solid black;
}

.sub-value {
    display: block;
    position: relative;
    padding: 5px;
    font-size: 30px;
    border: 1px solid black;
    cursor: move;
}

.section-input {
}

.section-frq {
    display: none;
}

.section-ref {
    display: none;
}

.frq-ref-language {
    margin-top: 10px;
    margin-bottom: 10px;
}

.minify .frq-ref-language {
    display: none;
}

.section-sub {
    display: none;
}

.generate-wrapper-sub,
.generate-wrapper-sum {
    text-align: center;
}

.generate-button {
    margin-top: 10px;
}

.minify .generate-wrapper-sub,
.minify .sub-input,
.minify .sub-wrapper {
    display: none;
}

.section-sum {
    display: none;
}

.section-output {
}

.apply .section-frq,
.apply .section-ref,
.apply .section-sub,
.apply .section-sum {
    display: block;
}

.apply-wrapper-input {
    text-align: center;
}

.apply-button {
    margin-top: 10px;
}

.minify .apply-button {
    display: none;
}

.output-wrapper {

}

.output-content {
    margin-top: 10px;
    width: 100%;
    height: 100px;
    font-size: 16px;
/*    resize: none;*/
    overflow-y: auto;
}

.full-output .output-content {
    height: auto;
    overflow-y: inherit;
}

.output-wrapper-button {
    display: none;
    text-align: center;
    margin-top: 15px;
}

.apply .output-wrapper-button {
    display: inherit;
}

.apply .minify .output-wrapper-button,
.minify .output-wrapper-button {
    display: none;
}

.full-output .minify .output-content,
.minify .output-content {
    border: 0 solid transparent;
    height: 60px;
    overflow-y: auto;
}

.item-output {
    font-size: 16px;
    cursor: default;
}

.char-output {
    -moz-transition: all 1s linear;
    -webkit-transition: all 1s linear;
    transition: all 1s linear;
}

.pulse {
    background-color: #7cb5ec;
}

.output-tooltip {
    display: inline-block;
    background-color: #222;
    font-size: 16px;
    font-family: 'alien';
    color: white;
    padding: 10px;
}
